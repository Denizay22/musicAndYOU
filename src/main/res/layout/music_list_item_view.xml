<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_list_item"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        android:scaleType="centerCrop">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/music_list_item_art"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/musicstockimage" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/music_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/exo2font"
            android:padding="5dp"
            android:text="SONG NAME"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/music_list_item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/exo2font"
            android:paddingStart="5dp"
            android:text="SINGER NAME"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/music_list_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/exo2font"
            android:paddingStart="5dp"
            android:text="0:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/music_list_item_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:src="@drawable/shareicon"
            android:tint="#EEEEEE"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/music_list_item_delete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/music_list_item_share"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/deleteicon"
            android:tint="#EEEEEEEE" />


    </RelativeLayout>

</android.support.v7.widget.CardView>